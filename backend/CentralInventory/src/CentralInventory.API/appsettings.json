{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=tcp:{your-server}.database.windows.net,1433;Initial Catalog=CentralInventoryDB;Persist Security Info=False;User ID={your-username};Password={your-password};MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
        "BlobStorage": "DefaultEndpointsProtocol=https;AccountName={your-storage-account};AccountKey={your-account-key};EndpointSuffix=core.windows.net"
    },
    "AzureAd": {
        "Instance": "https://login.microsoftonline.com/",
        "Domain": "{your-domain}.onmicrosoft.com",
        "TenantId": "{your-tenant-id}",
        "ClientId": "{your-client-id}",
        "Audience": "api://{your-client-id}"
    },
    "AllowedOrigins": [
        "http://localhost:5173",
        "https://localhost:5173"
    ]
}